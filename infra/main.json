{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.36.177.2456",
      "templateHash": "14100122886683412277"
    }
  },
  "parameters": {
    "environment": {
      "type": "string",
      "defaultValue": "prod",
      "metadata": {
        "description": "The name of the environment (e.g., dev, staging, prod)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "eastus2",
      "metadata": {
        "description": "The location where resources will be deployed"
      }
    },
    "appName": {
      "type": "string",
      "defaultValue": "azdevops-dashboard",
      "metadata": {
        "description": "The name of the application"
      }
    },
    "repositoryUrl": {
      "type": "string",
      "metadata": {
        "description": "The GitHub repository URL (reserved for future use)"
      }
    },
    "repositoryToken": {
      "type": "securestring",
      "metadata": {
        "description": "The GitHub repository token for deployment (reserved for future use)"
      }
    }
  },
  "variables": {
    "resourceGroupName": "[format('rg-{0}-{1}-v2', parameters('appName'), parameters('environment'))]",
    "staticWebAppName": "[format('{0}-{1}', parameters('appName'), parameters('environment'))]",
    "tags": {
      "Environment": "[parameters('environment')]",
      "Application": "[parameters('appName')]",
      "Deployed-By": "GitHub-Actions"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2023-07-01",
      "name": "[variables('resourceGroupName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "staticWebApp",
      "resourceGroup": "[variables('resourceGroupName')]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "staticWebAppName": {
            "value": "[variables('staticWebAppName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "tags": {
            "value": "[variables('tags')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.36.177.2456",
              "templateHash": "1928405170486542587"
            }
          },
          "parameters": {
            "staticWebAppName": {
              "type": "string",
              "metadata": {
                "description": "The name of the Static Web App"
              }
            },
            "location": {
              "type": "string",
              "metadata": {
                "description": "The location where the Static Web App will be deployed"
              }
            },
            "tags": {
              "type": "object",
              "defaultValue": {},
              "metadata": {
                "description": "Tags to apply to the Static Web App"
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.Web/staticSites",
              "apiVersion": "2023-01-01",
              "name": "[parameters('staticWebAppName')]",
              "location": "[parameters('location')]",
              "tags": "[parameters('tags')]",
              "properties": {
                "buildProperties": {
                  "appLocation": "/client",
                  "outputLocation": "build",
                  "skipGithubActionWorkflowGeneration": true
                },
                "allowConfigFileUpdates": true,
                "stagingEnvironmentPolicy": "Enabled"
              },
              "sku": {
                "name": "Free",
                "tier": "Free"
              }
            }
          ],
          "outputs": {
            "name": {
              "type": "string",
              "value": "[parameters('staticWebAppName')]"
            },
            "defaultHostname": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.Web/staticSites', parameters('staticWebAppName')), '2023-01-01').defaultHostname]"
            },
            "resourceId": {
              "type": "string",
              "value": "[resourceId('Microsoft.Web/staticSites', parameters('staticWebAppName'))]"
            }
          }
        }
      },
      "dependsOn": [
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', variables('resourceGroupName'))]"
      ]
    }
  ],
  "outputs": {
    "staticWebAppUrl": {
      "type": "string",
      "value": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, variables('resourceGroupName')), 'Microsoft.Resources/deployments', 'staticWebApp'), '2022-09-01').outputs.defaultHostname.value]"
    },
    "staticWebAppName": {
      "type": "string",
      "value": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, variables('resourceGroupName')), 'Microsoft.Resources/deployments', 'staticWebApp'), '2022-09-01').outputs.name.value]"
    },
    "staticWebAppResourceId": {
      "type": "string",
      "value": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, variables('resourceGroupName')), 'Microsoft.Resources/deployments', 'staticWebApp'), '2022-09-01').outputs.resourceId.value]"
    },
    "resourceGroupName": {
      "type": "string",
      "value": "[variables('resourceGroupName')]"
    }
  }
}